{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "types": [
      "node",
      "react",
      "react-dom",
      "next"
    ],
    "strict": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
  "next-env.d.ts",
  "app/**/*",
  "components/**/*",
  "lib/**/*",
  "pages/**/*",
  "types/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
  "node_modules",
  "src/**"
  ]
}
