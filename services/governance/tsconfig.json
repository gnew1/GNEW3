{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "typechain/*": ["typechain/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "hardhat.config.ts",
    "typechain/**/*.ts"
  ],
  "exclude": ["scripts"]
}
 
