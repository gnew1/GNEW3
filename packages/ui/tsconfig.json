{
  "compilerOptions": {
    "target": "ES2022",
  "module": "ESNext",
  "jsx": "react-jsx",
  "lib": ["ES2022", "DOM"],
  "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "__tests__",
    "tests",
    "src/hooks/useDebateAssistant.ts",
    "src/governance/**"
  ]
}
