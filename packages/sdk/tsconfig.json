
{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true
	},
	"include": [
		"src/index.ts",
		"src/clients/**/*.ts",
		"src/gasless.ts",
		"src/gov.ts",
		"src/delegation.ts"
	],
	"exclude": [
		"src/addresses.example.ts",
		"**/*.test.ts",
		"dist/**"
	]
}


